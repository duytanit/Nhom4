@model WebBanHang.Models.NhaSanXuat
@{
    ViewBag.Title = "ChiTiet";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}
<div class="col-md-12">
    <div class="panel panel-primary">
        <div class="panel-heading">THÔNG TIN CHI TIẾT NHÀ SẢN XUẤT  </div>
        <div class="panel-body">
            <!--row-->
            <div class="row" style="margin-top:5px;">
                <div class="col-md-2">Mã Nhà Sản Xuất</div>
                <div class="col-md-10">
                    @Model.MaNSX
                </div>
            </div>
            <!--end row-->
            <!--row-->
            <div class="row" style="margin-top:5px;">
                <div class="col-md-2">Tên Nhà Sản Xuất</div>
                <div class="col-md-10">
                    @Model.TenNSX
                </div>
            </div>
            <!--end row-->
            <!--row-->
            <div class="row" style="margin-top:5px;">
                <div class="col-md-2">Thông Tin Nhà Sản Xuất</div>
                <div class="col-md-10">
                    @Model.ThongTin
                </div>
            </div>
            <!--end row-->
            <!--row-->
            <div class="row" style="margin-top:5px;">
                <div class="col-md-2">Hình ảnh</div>
                <div class="col-md-10">
                    @{
                        string ImagePath = "~/Content/HinhAnhSP/" + Model.Logo;
                    }
                    <img src="@Url.Content(ImagePath)" alt="" width="200" height="150" />
                </div>
            </div>
            <!--end row-->
            <!--row-->

        </div>
        <!-- Modal footer -->
        <div class="modal-footer">
            @Html.ActionLink("Close", "Index", "QuanLyNhaSanXuat", new { @class = "btn btn-default" })
        </div>
    </div>
</div>
