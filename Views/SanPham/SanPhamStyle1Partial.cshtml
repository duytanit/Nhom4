@using WebBanHang.Models
@model IEnumerable<SanPham>



@foreach (var item in Model.Take(3))
{


    <div class="col-md-4 grid-top">
        <a href="@Url.Action("Single", "SanPham", new { @maSP = item.MaSP, @maLSP = item.MaLoaiSP})" class="b-link-stripe b-animate-go  thickbox">
            <img class="img-responsive" src="@Url.Content("~/Content/HinhAnhSP/" + item.HinhAnh)" alt="">
            <div class="b-wrapper">
                <h3 class="b-animate b-from-left    b-delay03 " style="text-align:left;font-size:15px;">
                    <span style="text-align:left;position:absolute;top:1%;left:1%;font-size:20px;">@Html.Raw(item.CauHinh)</span>
                </h3>
            </div>
        </a>


        <p><a href="@Url.Action("Single", "SanPham", new { @maSP = item.MaSP, @maLSP = item.MaLoaiSP})">@item.TenSP</a></p>
    </div>
}
<div class="clearfix"> </div>

