@model WebBanHang.Models.NhaSanXuat

@{
    ViewBag.Title = "Them";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}


<div class="col-md-12">
    <div class="panel panel-primary">
        <div class="panel-heading">THÊM MỚI NHÀ SẢN XUẤT</div>
        <div class="panel-body">
            @using (Html.BeginForm("Them", "QuanLyNhaSanXuat", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {

                <!--row-->
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-2">Ten Nhà Sản Xuất</div>
                    <div class="col-md-10">
                        <input type="text" name="tennsx" class="form-control" required />
                    </div>
                </div>
                <!--end row-->
                <!--row-->
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-2">Thông Tin Nhà Sản Xuất</div>
                    <div class="col-md-10">
                        <input type="text" name="thongtin" class="form-control" required />
                    </div>
                </div>
                <!--end row-->
                <!--row-->

                <div class="row" style="margin-top:5px;">
                    <div class="col-md-2">LOGO</div>
                    <div class="col-md-10">
                        <img id="output" class="img-rounded" alt="Ảnh SP" width="180" height="200" src="~/Content/HinhAnhSP/h0.png" />
                        <p><label for="ifile" style="cursor:pointer; border:1px solid #d0cdcd; padding: 5px; margin-left:40px;">Chọn file ảnh</label></p>
                        <input id="ifile" type="file" name="hinhanh" style="display:none;" class="form-control" onchange="loadFile(event)" />
                    </div>
                </div>
                <!--end row-->
                <div class="row" style="margin-top:20px;">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            }
        </div>
        <!-- Modal footer -->
        

        <div class="modal-footer">
            @Html.ActionLink("Close", "Index", "QuanLyNhaSanXuat", new { @class = "btn btn-default" })
        </div>
    </div>
</div>
<script>
    var loadFile = function (event) {
        var image = document.getElementById('output');
        image.src = URL.createObjectURL(event.target.files[0]);
    };
</script>



